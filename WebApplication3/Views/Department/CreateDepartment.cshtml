@model Departments

<div class="container">
    <form method="post">
        <input asp-for="Id" hidden />
        <div class="row pb-2">
            <h2 class="row pb-2">Create Department</h2>
            <hr />
        </div>
        <div class="row">
            <div class="col-3 pt-2 text-black"><label>Department Name : </label></div>
            <div class="col-6 pb-2"><input asp-for="DeptName" class="form-control text-black" /></div>
            <span asp-validation-for="DeptName" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-3 pt-2 text-black"><label>Department Head : </label></div>
            <div class="col-6 pb-2"><input asp-for="Description" class="form-control text-black" /></div>
        </div>
        <button type="submit" class="btn btn-primary" style="width:250px">Create Department</button>
        <a asp-controller="Department" asp-action="Index" class="btn btn-primary">Cancel</a>
    </form>
</div>